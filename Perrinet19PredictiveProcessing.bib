@article{Khoei13jpp,
    author = {Khoei, Mina A. and Masson, Guillaume S and Perrinet, Laurent U},
    bdsk-url-1 = {http://www.citeulike.org/user/LaurentPerrinet/article/12281049},
    bdsk-url-2 = {https://doi.org/10.1016/j.jphysparis.2013.08.001},
    date = {2013-11},
